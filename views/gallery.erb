<h1><%= @gallery.name.capitalize %> Gallery</h1>
<h2><%= @gallery.description %></h2>
<div>
  <a href="/galleries/<%= @gallery.id %>/images/new">Add an image</a>
  <a href="/galleries/<%= @gallery.id %>/edit">Edit this gallery</a>
</div>
<form action="/galleries/<%= @gallery.id %>" method="POST">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Gallery">
</form>
<div>
  <% @images.each do |image| %>
    <img src="<%= image.url %>" width="300px">
  <% end %>
</div>
<div>
  <a href="/">Home</a>
</div>
